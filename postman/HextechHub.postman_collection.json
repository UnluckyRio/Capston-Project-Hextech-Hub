    {
      "name": "Articles - Update",
      "request": {
        "method": "PUT",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{jwtToken}}"}
        ],
        "url": {"raw": "{{baseUrl}}/api/articles/1", "host": ["{{baseUrl}}"], "path": ["api","articles","1"]},
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Nuovo titolo\",\n  \"content\": \"Nuovo contenuto...\"\n}"
